<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:layout_width="605dp"
        android:layout_height="305dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TableLayout
            android:layout_width="700dp"
            android:layout_height="303dp">

            <TableRow
                android:id="@+id/row1"
                android:layout_width="600dp"
                android:layout_height="150dp">


                <CheckBox
                    android:id="@+id/wage"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"
                    android:onClick="checked"

                    android:scaleType="fitCenter"
                    android:text="@string/wage"
                    android:background="@drawable/salary"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>



                <CheckBox
                    android:id="@+id/happy"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/happiness"
                    android:background="@drawable/happiness"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


                <CheckBox
                    android:id="@+id/tax_rate"

                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/state_tax_rate"
                    android:background="@drawable/tax_rate_1"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/tax_bracket"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/state_tax_bracket"
                    android:background="@drawable/tax_bracket"
                    android:textColor="@color/teal_200"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/entertainment"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/entertainment"
                    android:background="@drawable/recreation"
                    android:textColor="@color/teal_200"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_width="670dp"
                android:layout_height="150dp">

                <CheckBox
                    android:id="@+id/healthcare"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/healthcare"
                    android:background="@drawable/health_care"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <CheckBox
                    android:id="@+id/air_water"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/air_and_water"
                    android:background="@drawable/air_water"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/education"

                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/education"
                    android:background="@drawable/education"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


                <CheckBox
                    android:id="@+id/living_index"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/living_index"
                    android:background="@drawable/cost_of_living_index"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


                <CheckBox
                    android:id="@+id/living_ranking"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:adjustViewBounds="false"

                    android:scaleType="fitCenter"
                    android:text="@string/living_rank"
                    android:background="@drawable/cost_of_living_ranking_1"
                    android:textColor="@color/yellow"
                    android:textSize="18sp"/>

            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/backToIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="11dp"
        android:text="@string/back_to_state"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/see_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="167dp"
        android:text="@string/see_results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>